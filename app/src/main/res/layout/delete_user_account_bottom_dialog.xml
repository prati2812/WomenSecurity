<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/relative_delete_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account ?"
            android:textSize="25sp"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:textColor="#FF1100"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativedelete_layout1"
        android:layout_below="@+id/relative_delete_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Do you want to delete your account permanently ?"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_below="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:text="> Delete your account info and profile photo"
            android:textSize="15sp"
            android:textColor="#B7000000"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativedelete_layout1">


        <RelativeLayout
            android:id="@+id/relativeDeleteAccountBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@+id/relativeCancelAccountBtn"
            android:layout_marginEnd="20sp"
            android:backgroundTint="#FF1100"
            android:background="@drawable/txt_outline_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Delete"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeProgressBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@+id/relativeCancelAccountBtn"
            android:layout_marginEnd="20sp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar_delete"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/custom_progress_bar2"
                android:padding="8dp"
                android:elevation="5dp"
                android:indeterminateTint="@color/white"
                android:layout_marginEnd="50dp"
                android:layout_centerInParent="true"
                android:visibility="visible"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeCancelAccountBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/app_theme_color"
            android:background="@drawable/txt_outline">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cancel"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>