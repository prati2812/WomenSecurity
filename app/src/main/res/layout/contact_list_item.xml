<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="120dp"
        app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_contact_list_layout1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_contact_list">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            app:civ_border_color="#37000000"
            app:civ_border_width="1dp"
            android:src="@drawable/person_icon"/>


        <RelativeLayout
            android:id="@+id/conv_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toEndOf="@id/user_image"
            android:gravity="fill"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/user_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="phone number"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/add_contact_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/conv_relative_layout"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_box"
            android:visibility="gone"
            app:tint="@color/app_theme_color" />


    </RelativeLayout>


    </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>